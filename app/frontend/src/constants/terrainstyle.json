{
    "version": 8,
    "sources": {
        "background": {
            "type": "raster",
            "tiles": ["https://www.google.com/maps/vt?lyrs=s@189&gl=cn&x={x}&y={y}&z={z}"],
            "tileSize": 256,
            "attribution": "Imagery ©2023 Google, Imagery ©2023 Bluesky, Getmapping plc, Infoterra Ltd & Bluesky, Maxar Technologies, Map data ©2023"
        },
        "positivefarms": {
            "type": "vector",
            "url": "https://tiles.positivefarms.org/data/positivefarms.json"
        },  
        "terrainSource": {
            "type": "raster-dem",
            "url": "https://tiles.positivefarms.org/data/terrain.json",
            "tileSize": 256,
            "attribution": "PR data by Japan Aerospace Exploration Agency."
        },
        "hillshadeSource": {
            "type": "raster-dem",
            "url": "https://tiles.positivefarms.org/data/terrain.json",
            "attribution": "PR data by Japan Aerospace Exploration Agency."
        }
    },
    "glyphs": "https://tiles.positivefarms.org/fonts/{fontstack}/{range}.pbf",
    "layers": [
        {
            "id": "background",
            "type": "raster",
            "source": "background",
            "minzoom": 0,
            "maxzoom": 22
        },
        {
            "id": "hills",
            "type": "hillshade",
            "source": "hillshadeSource",
            "layout": { "visibility": "visible" },
            "paint": { "hillshade-shadow-color": "#473B24" }
        },
        {
            "filter": [
              "all"
            ], 
            "id": "positivefarms_background",
            "paint": {
              "fill-color": "green",
              "fill-opacity": 0.6          
            },
            "source": "positivefarms",
            "source-layer": "positivefarms",
            "type": "fill"
        },
        {
            "filter": [
                "in",
                "id",
                ""
            ],
            "id": "positivefarms_active",
            "paint": {
                "fill-color": "orange",
                "fill-opacity": 0.6
            },
            "source": "positivefarms",
            "source-layer": "positivefarms",
            "type": "fill"
        },
        {
            "filter": [
                "all"
            ],
            "id": "positivefarms_outlined",
            "paint": {
                "line-color": "orange",
                "line-width": 3,
                "line-opacity": [
                "case",
                ["boolean", ["feature-state", "hover"], false],
                1,
                0
                ]          
            },
            "source": "positivefarms",
            "source-layer": "positivefarms",
            "type": "line"
        }        
    ],
    "terrain": {
        "source": "terrainSource",
        "exaggeration": 3
    }
}